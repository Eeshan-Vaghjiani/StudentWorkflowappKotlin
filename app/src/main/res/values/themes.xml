<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Light Mode -->
    <style name="Base.Theme.LoginAndRegistration" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_color</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorGreen</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/colorGreen</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/colorOrange</item>
        <item name="colorOnTertiary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/auth_input_background</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@color/divider_color</item>
        <item name="colorOutlineVariant">@color/auth_input_border</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Material components -->
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <item name="buttonStyle">@style/Widget.Material3.Button</item>
        
        <!-- Divider color -->
        <item name="android:listDivider">@color/divider_color</item>
    </style>

    <style name="Theme.LoginAndRegistration" parent="Base.Theme.LoginAndRegistration" />
</resources>