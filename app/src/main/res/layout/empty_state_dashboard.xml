<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_tasks"
        app:tint="@color/colorTextSecondary"
        android:alpha="0.5"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/empty_state_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_state_dashboard_title"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_state_dashboard_message"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/colorTextSecondary"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_empty_state_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_state_create_task"
        app:icon="@drawable/ic_add_black_24dp"/>
</LinearLayout>
