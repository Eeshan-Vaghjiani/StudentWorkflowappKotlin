rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check file size (10MB limit)
    function isValidFileSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Profile pictures folder rules
    // Users can read any profile picture if authenticated
    // Users can only write to their own profile picture folder
    match /profile_pictures/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(userId) && isValidFileSize();
    }
    
    // Chat attachments folder rules
    // Users can read any chat attachment if authenticated
    // Users can write chat attachments if authenticated (participant check handled by Firestore)
    match /chat_attachments/{chatId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidFileSize();
    }
    
    // Global file size limit for all paths
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
